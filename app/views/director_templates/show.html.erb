<h1>
  <%= "#{@the_director.first_name} #{@the_director.last_name}" %>
</h1>

<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image %>" style="width:250px;">
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Internal ID
  </dt>
  <dd>
    <%= @the_director.id %>
  </dd>
</dl>

<h2>Filmography</h2>

<ul>
  <% d_id = @the_director.id %>

  <% matching_movies = Movie.where({ :director_id => d_id }) %>

  <% matching_movies.each do |a_movie| %>
    <li>
      <a href="/movies/<%= a_movie.id %>"><%= a_movie.title %> (<%= a_movie.year %>)</a>
    </li>
  <% end %>
</ul>
